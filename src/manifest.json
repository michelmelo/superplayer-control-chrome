{
  "manifest_version": 2,

  "name": "Superplayer.fm Control",
  "description": "Extension to control Superplayer.fm",
  "version": "1.2",
  "permissions": [
    "tabs", "https://*.superplayer.fm/*"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "64": "img/icon64.png"
  },
  "browser_action": {
    "default_icon": "img/icon16.png",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["js/ga.js", "js/globals.js", "js/hotkeys.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*.superplayer.fm/*"],
      "js": ["js/content.js"]
    }
  ],
  "commands": {
    "play": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "Tocar/Pausar música"
    },
    "next": {
      "suggested_key": {
        "default": "Alt+N"
      },
      "description": "Tocar próxima música"
    },
    "mute": {
      "description": "Deixar mudo"
    },
    "like": {
      "suggested_key": {
        "default": "Alt+L"
      },
      "description": "Amei esta música"
    },
    "hate": {
      "suggested_key": {
        "default": "Alt+D"
      },
      "description": "Esta música não me agradou"
    }
  }
}
