{
  "manifest_version": 2,

  "name": "Superplayer.fm Control",
  "description": "Extension to control Superplayer.fm",
  "version": "1.0",
  "permissions": [
    "tabs", "https://*.superplayer.fm/*"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "64": "icon64.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["js/globals.js", "js/hotkeys.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*.superplayer.fm/*"],
      "js": ["js/content.js"]
    }
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Abrir Superplayer Control"
    },
    "play_pause": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "Play/Pause"
    },
    "next": {
      "suggested_key": {
        "default": "Alt+N"
      },
      "description": "Próxima música"
    }
  }
}
